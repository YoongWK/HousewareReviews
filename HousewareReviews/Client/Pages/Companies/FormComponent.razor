@inject IHttpClientFactory ClientFactory

<EditForm Model="@company" OnValidSubmit=@OnValidSubmit>
    <DataAnnotationsValidator />
    <ValidationSummary />
    <fieldset disabled="@Disabled">
        <div class="form-group">
            <label>Name:</label>
            <div>
                <InputText @bind-Value="@company.Name" class="form-control" />
                <ValidationMessage For="@(() => company.Name)" />
            </div>
        </div>

        <div class="form-group">
            <label>UEN:</label>
            <div>
                <InputText @bind-Value="@company.UEN" class="form-control" />
                <ValidationMessage For="@(() => company.UEN)" />
            </div>
        </div>

        <div class="form-group">
            <label>Email:</label>
            <div>
                <InputText @bind-Value="@company.Email" class="form-control" />
                <ValidationMessage For="@(() => company.Email)" />
            </div>
        </div>

        <div class="form-group">
            <label>Contact Number:</label>
            <div>
                <InputText @bind-Value="@company.ContactNumber" class="form-control" />
                <ValidationMessage For="@(() => company.ContactNumber)" />
            </div>
        </div>

        <div class="form-group">
            <label>Description:</label>
            <div>
                <InputTextArea @bind-Value="@company.Description" class="form-control" />
                <ValidationMessage For="@(() => company.Description)" />
            </div>
        </div>

        <div class="form-group">
            <label>Logo URI:</label>
            <div class="d-flex flex-column">
                <InputFile OnChange="OnFileSelection" accept="image/png, image/jpeg" />
                <ValidationMessage For="@(() => company.LogoUri)" />
            </div>
            <img class="w-100 pt-2" src="@company.LogoUri" onerror="this.style.display='none'" />
        </div>

        <div class="form-group">
            <label>Website URL:</label>
            <div>
                <InputText @bind-Value="@company.WebsiteUrl" class="form-control" />
                <ValidationMessage For="@(() => company.WebsiteUrl)" />
            </div>
        </div>
    </fieldset>
    <br />
    @if (!Disabled)
    {
        <button type="submit" class="btn btn-success btn-block">
            @ButtonText
        </button>
    }
    <BackToList Target="companies" />
</EditForm>

@code {
    [Parameter] public bool Disabled { get; set; } = false;
    [Parameter] public Company? company { get; set; }
    [Parameter] public string ButtonText { get; set; } = "Save";
    [Parameter] public EventCallback OnValidSubmit { get; set; }

    private HttpClient _client;

    protected override void OnInitialized()
    {
        _client = ClientFactory.CreateClient("private");
    }

    private async Task OnFileSelection(InputFileChangeEventArgs e)
    {
        var imgFile = e.File;
        var buffers = new byte[imgFile.Size];
        await imgFile.OpenReadStream().ReadAsync(buffers);
        company.LogoUri = $"data:image/png;base64,{Convert.ToBase64String(buffers)}";
    }
}