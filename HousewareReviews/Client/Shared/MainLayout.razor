@inherits LayoutComponentBase
@inject IJSRuntime JS

<div class="page">
    <div>
        <NavMenu />
    </div>
    <main @onclick="HideNavBar">
        <article class="content">
            @Body
        </article>
    </main>
</div>

@code
{
    // Hide Collapsable Bootstrap NavBar
    public async Task HideNavBar()
    {
        await JS.InvokeVoidAsync("hideNavBar");
    }
}