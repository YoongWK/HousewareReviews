@page
@model LoginModel

@{
    ViewData["Title"] = "Log In";
}

<div class="d-flex align-items-center row rounded-4 m-0" style="background-color: var(--white)">
	<div class="col-xl-6 imagecard p-0">
		<img class="imagecard-image-l w-100" src="~/images/backgrounds/login.jpg" />
		<div class="imagecard-content text-center">
			<h2 class="imagecard-content-title">Welcome Back!</h2>
			<p class="d-none d-xl-block imagecard-content-text">Log In to engage with our vibrant community of home enthusiasts.</p>
		</div>
	</div>
	<div class="col-xl-6 p-0">
		<div class="px-5 py-3">
			<h2 class="form-title text-center">@ViewData["Title"]</h2>
			<form id="account" method="post">
				<div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
				<div class="form-floating">
					<input asp-for="Input.Email" class="form-control form-input" autocomplete="username" aria-required="true" placeholder="name@example.com" />
					<label asp-for="Input.Email" class="form-label">Email</label>
					<small><span asp-validation-for="Input.Email" class="text-danger"></span></small>
				</div>
				<div class="form-floating mb-3">
					<input asp-for="Input.Password" class="form-control form-input" autocomplete="current-password" aria-required="true" placeholder="password" />
					<label asp-for="Input.Password" class="form-label">Password</label>
					<small><span asp-validation-for="Input.Password" class="text-danger"></span></small>
				</div>
				<div class="checkbox mb-2">
					<label asp-for="Input.RememberMe" class="form-label">
						<input class="form-check-input form-input-check" asp-for="Input.RememberMe" />
						@Html.DisplayNameFor(m => m.Input.RememberMe)
					</label>
				</div>
				<div>
					<button id="login-submit" type="submit" class="w-100 form-input-button rounded-5">Log in</button>
				</div>
				<div>
					<p class="form-input-label m-0 mt-3">
						Forgot password? <a class="form-input-link" id="forgot-password" asp-page="./ForgotPassword">Reset</a>
					</p>
					<p class="form-input-label m-0 mt-2">
						Don't have an account? <a class="form-input-link" asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Register</a>
					</p>
				</div>
			</form>
		</div>
	</div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
